---
interface Props {
	title: string;
}

const { title } = Astro.props;
const headerLinks = [{ title: 'Blog', href: "/blog" }]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-slate-700 text-white px-4 h-10">
			<div class="mx-auto max-w-[660px] flex items-stretch space-x-2 h-full">
				<h3 class="flex items-center">
					<a class="text-lg " href="/" >Alec Featherston</a>
				</h3>
				<a href="/blog" class="text-lg hover:bg-slate-500 px-2 flex items-center">
					Blog
				</a>
			</div>
		</header>
	
		<div class="px-4 py-8 min-h-[90vh]">
			<div class="mx-auto max-w-[660px]">
				<slot />
			</div>
		</div>
		<footer>
			<div class="mx-auto max-w-[660px] py-4 flex justify-end items-center space-x-4">
				<a href="mailto: alecfeatherston@gmail.com" class="text-blue-600">Email Me</a>
				<a href="https://www.linkedin.com/in/alec-featherston-0b0865162/">
					<img src="/linkedin_logo.png" alt="LinkedIn Logo" class="h-8">
				</a>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}

	body {
		margin: 0;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
